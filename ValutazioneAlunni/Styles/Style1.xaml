<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ValutazioneAlunni.Styles">

  <Style x:Key="TextFieldLabel_Style" TargetType="Label">
    <Setter Property="HorizontalContentAlignment" Value="Right"/>
  </Style>

  <Style x:Key="TextFieldValue_Style" TargetType="TextBox">
    <Setter Property="Background" Value="#FFFFFFE0"/>
    <Setter Property="Margin" Value="3,3,0,3"/>
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
  </Style>

  <Style x:Key="TextMultilineFieldValue_Style" BasedOn="{StaticResource TextFieldValue_Style}"  TargetType="TextBox">
    <Setter Property="VerticalScrollBarVisibility" Value="Visible"/>
    <Setter Property="Height" Value="140"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>

  <Style x:Key="DateFieldValue_Style" TargetType="DatePicker">
    <Setter Property="Background" Value="#FFFFFFE0"/>
    <Setter Property="Margin" Value="3,3,0,3"/>
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
  </Style>

  <Style x:Key="BaseButton_Style" TargetType="Button">
    <Setter Property="Width" Value="80"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="Margin" Value="0,0,3,0"/>
  </Style>


</ResourceDictionary>